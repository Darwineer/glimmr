<resources>

    <style name="Theme.glimmrlight" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_glimmrlight</item>
        <item name="popupMenuStyle">@style/glimmrlight_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/glimmrlight_DropDownListView</item>
        <item name="actionBarTabStyle">@style/glimmrlight_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/glimmrlight_DropDownNav</item>
        <item name="actionBarStyle">@style/glimmrlight_solid_ActionBar</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_glimmrlight</item>
        <item name="android:popupMenuStyle">@style/glimmrlight_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/glimmrlight_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/glimmrlight_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/glimmrlight_DropDownNav</item>
        <item name="android:actionBarStyle">@style/glimmrlight_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_glimmrlight</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.glimmrlight.widget</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.glimmrlight.widget</item>
        <item name="spinnerDropDownItemStyle">@style/glimmrlight_DropDownItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/glimmrlight_DropDownItem</item>
        <item name="spinnerItemStyle">@style/glimmrlight_SpinnerItem</item>
        <item name="android:spinnerItemStyle">@style/glimmrlight_SpinnerItem</item>

        <!-- Style the TabPageIndicator -->
        <item name="vpiTabPageIndicatorStyle">@style/glimmr_TabPageIndicator</item>

        <!-- Style the TitlePageIndicator -->
        <item name="vpiTitlePageIndicatorStyle">@style/glimmr_TitlePageIndicator</item>
    </style>

    <style name="glimmrlight_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_glimmrlight</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_glimmrlight</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_glimmrlight</item>
        <item name="progressBarStyle">@style/glimmrlight_ProgressBar</item>

        <item name="android:background">@drawable/ab_solid_glimmrlight</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_glimmrlight</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_glimmrlight</item>
        <item name="android:progressBarStyle">@style/glimmrlight_ProgressBar</item>
    </style>

    <style name="glimmrlight_transparent_ActionBar" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_glimmrlight</item>
        <item name="progressBarStyle">@style/glimmrlight_ProgressBar</item>

        <item name="android:background">@drawable/ab_transparent_glimmrlight</item>
        <item name="android:progressBarStyle">@style/glimmrlight_ProgressBar</item>
    </style>

    <style name="glimmrlight_PopupMenu" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_glimmrlight</item>
    </style>

    <style name="glimmrlight_DropDownListView" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_glimmrlight</item>
    </style>

    <style name="glimmrlight_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_glimmrlight</item>

        <item name="android:background">@drawable/tab_indicator_ab_glimmrlight</item>
    </style>

    <style name="glimmrlight_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_glimmrlight</item>

        <item name="android:background">@drawable/spinner_background_ab_glimmrlight</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_glimmrlight</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_glimmrlight</item>
    </style>

    <style name="glimmrlight_ProgressBar" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_glimmrlight</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.glimmrlight.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/glimmrlight_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/glimmrlight_DropDownListView</item>

        <item name="android:popupMenuStyle">@style/glimmrlight_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/glimmrlight_DropDownListView</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="glimmrlight_DropDownItem" parent="@style/Widget.Sherlock.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="glimmrlight_SpinnerItem" parent="@style/Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <!-- Begin stuff not generated by the actionbar style generator -->
    <style name="glimmr_TabPageIndicator" parent="Widget">
        <item name="android:background">
            @drawable/tab_indicator_ab_glimmrlight</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="glimmr_TitlePageIndicator" parent="Widget">
        <item name="android:background">@drawable/bg_tint</item>
        <item name="android:textColor">@color/flickr_pink</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="footerColor">@color/flickr_blue</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">0dp</item>
        <item name="selectedColor">@color/flickr_blue</item>
        <item name="selectedBold">false</item>
        <item name="topPadding">3dp</item>
    </style>

    <style name="glimmr_ShadowedText">
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>
